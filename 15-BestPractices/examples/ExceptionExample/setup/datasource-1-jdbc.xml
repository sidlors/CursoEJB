<?xml version="1.0" encoding="UTF-8"?>
<jdbc-data-source xmlns="http://xmlns.oracle.com/weblogic/jdbc-data-source">
  <name>jdbc/EmployeeDB</name>
  <jdbc-driver-params>
    <url>jdbc:derby://localhost:1527/EmployeeDB</url>
    <driver-name>org.apache.derby.jdbc.ClientDriver</driver-name>
    <properties>
      <property>
        <name>user</name>
        <value>APP</value>
      </property>
      <property>
        <name>password</name>
        <value>APP</value>
      </property>
    </properties>
  </jdbc-driver-params>
  <jdbc-data-source-params>
    <jndi-name>jdbc/EmployeeDB</jndi-name>
  </jdbc-data-source-params>
</jdbc-data-source>
